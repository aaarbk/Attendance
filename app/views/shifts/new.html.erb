
<div class="container">
<%= form_tag("/sa", method: "post", id: "form") do %>
    <div class="form-group">
        <%= label_tag(:start_time, "Start Time") %>
        <div class="col-sm-4">
           <%= text_field_tag(:start_time, nil, class: "form-control") %>
        </div>
    </div>

     <div class="form-group">
        <%= label_tag(:end_time, "End Time") %>
        <div class="col-sm-4">
           <%= text_field_tag(:end_time, nil, class: "form-control") %>
        </div>
    </div>

    <div class="form-group">
    <%= label_tag "Employees" %>
        <% @employees.each do |employee| %>
          <div class="form-check">
            <%= check_box_tag 'employee_ids[]', employee.id, false, class: "form-check-input" %>
            <%= label_tag "employee_#{employee.id}", employee.name, class: "form-check-label" %>
            </div>
          
        <% end %>
    </div>
     <div class="form-group">
        <%= submit_tag("Create shift", class: "btn btn-primary") %>
    </div>


    
  
<% end %>
</div>


